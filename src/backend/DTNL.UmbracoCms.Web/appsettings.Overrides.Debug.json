{
  "$schema": "./appsettings-schema.json",
  "Application": {
    "Cache": {
      "Enabled": false
    },
    "Development": {
      "AssetsFallbackDirectories": [ "../../frontend/build", "../../frontend/source" ],
      "AssetsFallbackUri": "https://app-web-test-sdc.azurewebsites.net",
      "AssetsSubdirectories": [ "assets", "html" ],
      "DeveloperExceptionPage": true
    },
    "CrawlableDomains": [
      "*"
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug"
    },
    "WriteTo": [
      {
        "Name": "ApplicationInsights",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "telemetryConverter": "Serilog.Sinks.ApplicationInsights.TelemetryConverters.TraceTelemetryConverter, Serilog.Sinks.ApplicationInsights"
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "restrictedToMinimumLevel": "Debug"
              }
            }
          ]
        }
      }
    ]
  },
  "Umbraco": {
    "CMS": {
      "Content": {
        "MacroErrors": "Throw"
      },
      "Hosting": {
        "Debug": true
      },
      "Global": {
        "UseHttps": false
      },
      "KeepAlive": {
        "DisableKeepAliveTask": true
      },
      "ModelsBuilder": {
        "ModelsMode": "SourceCodeAuto"
      },
      "Runtime": {
        "Mode": "Development"
      },
      "RuntimeMinification": {
        "useInMemoryCache": true,
        "cacheBuster": "Timestamp"
      },
      "Security": {
        "KeepUserLoggedIn": true
      },
      "Tours": {
        "EnableTours": false
      },
      "WebRouting": {
        "UrlProviderMode": "Relative"
      }
    }
  },
  "uSync": {
    "Settings": {
      "ExportOnSave": "All"
    }
  }
}
