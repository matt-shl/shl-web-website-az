@using DTNL.UmbracoCms.Web.Helpers.Extensions
@model DTNL.UmbracoCms.Web.Components.LayoutSection

<section class="c-layout-section c-layout-section--@(Model.Variant) c-layout-section--reduce-margin-@(Model.ReduceMargin) @Model.CssClasses @(Model.CssThemeClasses ?? "t-white")"
@(string.IsNullOrEmpty(Model.JsHook) ? "" : "js-hook-" + Model.JsHook)
@(string.IsNullOrEmpty(Model.GtmHook) ? "" : "js-hook-gtm-" + Model.GtmHook)
id="@(!string.IsNullOrEmpty(Model.Id) ? Model.Id : "")"
data-title="@(!string.IsNullOrEmpty(Model.NavigationTitle) ? Model.NavigationTitle : "")"
js-hook-section
js-hook-inview
data-inview-threshold="0.5"
data-inview-persistent="true"
data-inview-trigger="anchor-list::update"
>

    <div class="layout-section__inner">
        @if (!Model.FullWidth)
        {
            <div class="layout-section__container @Model.CssContainerClasses">
                @if (!Model.ListLabel.IsNullOrWhiteSpace())
                {
                    <ul class="layout-section__wrapper layout-section__wrapper--list" aria-label="@Model.ListLabel">
                        @this.RenderPartialBody()
                    </ul>
                }
                else
                {
                    <div class="layout-section__wrapper">
                        @this.RenderPartialBody()
                    </div>
                }
            </div>
        }
        else
        {
            if (!Model.ListLabel.IsNullOrWhiteSpace())
            {
                <ul class="layout-section__wrapper layout-section__wrapper--list" aria-label="@Model.ListLabel">
                    @this.RenderPartialBody()
                </ul>
            }
            else
            {
                <div class="layout-section__wrapper">
                    @this.RenderPartialBody()
                </div>
            }
        }
    </div>
</section>
