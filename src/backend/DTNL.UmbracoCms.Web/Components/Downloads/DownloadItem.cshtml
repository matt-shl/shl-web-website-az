@using DTNL.UmbracoCms.Web.Helpers.Aliases
@using DTNL.UmbracoCms.Web.Helpers.Extensions
@using Umbraco.Cms.Core.Dictionary

@model DTNL.UmbracoCms.Web.Components.DownloadItem

@inject ICultureDictionary CultureDictionary

 <div class="c-download-item">
    <div class="download-item__icon-container">
        <svg src="@Model.Icon"/>
            </div>
    <div class="download-item__content-container">
        <span class="download-item__title">@Model.Title</span>
        <p class="download-item__description">@Model.Description</p>
    </div>
    <div class="download-item__link-container">
        <a aria-controls="@Model.DownloadOverlay.Modal.Id"
           class="download-item__link"
           aria-label="@CultureDictionary.GetTranslation(TranslationAliases.Common.Downloads.DownloadPDF, Model.Title)">
            <span class="download-item__link-icon">
                <svg src="@SvgAliases.Icons.Download"/>
            </span>

            <span> @CultureDictionary.GetTranslation(TranslationAliases.Common.Downloads)</span>
        </a>
    </div>
</div>
