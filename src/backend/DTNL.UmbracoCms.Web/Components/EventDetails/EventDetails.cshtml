@using DTNL.UmbracoCms.Web.Components
@model DTNL.UmbracoCms.Web.Components.EventDetails

<partial name="LayoutSection"
         model="@(new LayoutSection { CssClasses = "c-layout-section--no-padding c-media-section-container t-white"})">
    <partial name="Media" model="@Model.Media" />
</partial>


<div class="c-event-detail t-light-grey" js-hook-event-detail>
    <div class="event-detail__container">
        <div class="event-detail__content">
            <h2 class="event-detail__title">@Model.Title</h2>

            <div class="event-detail__details">
                <div class="event-detail__col event-detail__col--col1">
                    @Html.Raw(Model.Location)
                </div>
                <div class="event-detail__col event-detail__col--col2">
                    @Html.Raw(Model.Time)
                </div>
                <div class="event-detail__col event-detail__col--cta">
                    <partial name="Button" model="@Model.LinkButton" />
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.FormOverlay is not null)
{
    <partial name="FormOverlay" model="@Model.FormOverlay"/>
}
